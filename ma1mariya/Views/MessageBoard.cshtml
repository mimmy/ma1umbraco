@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.MessageBoard>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
}
	
<div class="container">
	<div class="row">
		<h1>Message Board</h1>
		<div class="col-lg-6">
			@Html.Action("Index", "BoardMessageSorface")
		</div>
			</div>
			<div class="row">
		<div class="col-lg-12">
			<h2>All messages:</h2>
			@{

	var messageList = Umbraco.Content(1125);
	
	foreach(var msg in messageList.Children().OrderBy("CreateDate desc")) {
		
		<div><p><strong> @msg.sender: </strong></p>
			<p>@msg.message</p>
			<p>@msg.CreateDate</p>
			</div>
			
	}
	
}
		</div>
	</div>
</div>